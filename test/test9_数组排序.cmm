//声明实数数组,并赋值
real R[7];
R[0] = 8;
R[1] = -0.99;
R[2] = -1.0;
R[3] = 5;
R[4] = 4.01;
R[5] = 3.0;
//进入冒泡排序算法
int i,j,swap;
i = 6;
while (i <> 1){
    swap = 0;
    j = 0;
    while (j < i-1){
		//交换数组元素
        if (R[j+1] < R[j]){
		    swap = 1;
            R[6] = R[j];
		    R[j] = R[j+1];
		    R[j+1] = R[6];
        }
        j = j + 1;
    }
    i = i - 1;
	if(swap <> 1)
		i = 1;
}

int k = 0;
while(k<6){
	write(R[k]);
	k = k +1;
}
